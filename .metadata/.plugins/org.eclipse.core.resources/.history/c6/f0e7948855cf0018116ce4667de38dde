package com.juxin.exercise;

import java.util.ArrayList;
import java.util.Collections;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

public class Test {
	public static void main(String[] args) {
		int i = 1;
		String myLuck = "03,04,09,18,22,24,07";
		String luck = luckString(randomOfList());
		numberOfLuck(myLuck, luck, i);
		System.out.println(i + "\t" + bb + "\tgoodluck");
	}

	public static List<String> randomOfList() {
		Set<String> mySet = new HashSet<>();
		while (mySet.size() < 6) {

			String ss = String.valueOf((int) (Math.random() * 36) + 1);
			if (ss.length() == 1) {
				ss = "0" + ss;
			}
			mySet.add(ss);
		}

		List<String> myTreeList = new ArrayList<>(mySet);
		Collections.sort(myTreeList);
		return myTreeList;
	}

	public static String luckString(List<String> luckList) {
		String ss = "";
		for (String s : luckList) {
			ss += (s + ",");
		}
		String sss = String.valueOf((int) (Math.random() * 16) + 1);
		if (sss.length() == 1) {
			sss = "0" + sss;
		}
		ss += sss;
		return ss;
	}

	public static void numberOfLuck(String aa, String bb, int i) {
		if (!aa.equals(bb)) {
			while (!aa.equals(bb)) {
				System.out.println(i + ":\t" + bb);
				bb = luckString(randomOfList());
				i++;
			}
		}
	}
}
