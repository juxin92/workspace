package com.juxin.exercise;

import java.util.ArrayList;
import java.util.Collections;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

public class Test {
	public static void main(String[] args) {
		String myLuck = "03,04,09,18,22,24,07";
		String luck = luckString(randomOfList());
		int i = numberOfLuck(myLuck, luck);
		System.out.println(i + "\t" + myLuck + "\tgoodluck");
	}

	/*
	 * 六个红，从小到大排列.
	 */
	public static List<String> randomOfList() {
		Set<String> mySet = new HashSet<>();
		while (mySet.size() < 6) {

			String ss = String.valueOf((int) (Math.random() * 33) + 1);
			if (ss.length() == 1) {
				ss = "0" + ss;
			}
			mySet.add(ss);
		}

		List<String> myTreeList = new ArrayList<>(mySet);
		Collections.sort(myTreeList);
		return myTreeList;
	}

	/*
	 * 六个红 + 一个蓝
	 */
	public static String luckString(List<String> luckList) {
		String ss = "";
		for (String s : luckList) {
			ss += (s + ",");
		}
		String sss = String.valueOf((int) (Math.random() * 16) + 1);
		if (sss.length() == 1) {
			sss = "0" + sss;
		}
		ss += sss;
		return ss;
	}

	/*
	 * 中奖期数
	 */
	public static int numberOfLuck(String aa, String bb) {
		int i = 1;
		if (!aa.equals(bb)) {
			while (!aa.equals(bb)) {
				bb = luckString(randomOfList());
				i++;
			}
		}
		return i;
	}
}
